<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:id="@+id/cvHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            style="@style/bodyTextRegular"
            android:text="@string/tanggal" />

        <TextView
            android:id="@+id/tvCatatan"
            style="@style/bodyTextRegular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTanggal"
            android:layout_alignParentStart="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/tvJumlah"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:text="@string/pengajar_tari" />

        <TextView
            android:id="@+id/tvJumlah"
            style="@style/bodyTextBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="@string/saldo1" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>