<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding"
    android:orientation="vertical"
    tools:context=".BerandaFragment">

    <RelativeLayout
        android:id="@+id/layoutMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/menu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center" />

        <Button
            android:id="@+id/menu2"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_list" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/blackTextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:text="@string/saldo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutMenu" />

    <LinearLayout
        android:id="@+id/layoutSaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        tools:ignore="MissingConstraints">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content"
            android:background="@color/blue2"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/blue2"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/ic_masuk"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_masuk" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/ic_masuk"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/bodyTextRegular2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pemasukan" />

                    <TextView
                        android:id="@+id/tvSaldoMasuk"
                        style="@style/blackTextTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saldo1" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_135sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_gravity="end"
            android:background="@color/blue2"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="@dimen/_135sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/blue2"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:id="@+id/ic_keluar"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_keluar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_toEndOf="@+id/ic_keluar"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        style="@style/bodyTextRegular2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pengeluaran" />

                    <TextView
                        android:id="@+id/tvSaldoKeluar"
                        style="@style/blackTextTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saldo2" />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/ic_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutSaldo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:text="@string/riwayat_transaksi"
        app:layout_constraintTop_toBottomOf="@id/imgLine"
        style="@style/blackTextBtn"/>

    <LinearLayout
        android:id="@+id/layoutMenu2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2">

        <Button
            style="@style/whiteTextBtn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/style_btn2"
            android:text="@string/semua" />

        <Button
            style="@style/blue1TextBtn"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@drawable/style_btn_outline"
            android:text="@string/pemasukan" />

        <Button
            style="@style/blue1TextBtn"
            android:layout_width="@dimen/_95sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:background="@drawable/style_btn2"
            android:text="@string/pengeluaran" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutMenu2"
        tools:listitem="@layout/card_history" />

</androidx.constraintlayout.widget.ConstraintLayout>